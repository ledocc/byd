function(byd__option__use_ccache)

    set(default_value OFF)
    if(UNIX)
        set(default_value ON)
    endif()


    byd__option__private__get_default("BYD__OPTION__USE_CCACHE" "${default_value}" default_use_ccache)

    option(BYD__OPTION__USE_CCACHE "Enable to build shared libraries" ${default_use_ccache})

endfunction()

