function(byd__option__jobs)

    cmut__system__get_num_core_available(num_core)
    set(BYD__OPTION__JOBS ${num_core} CACHE STRING "Specifies the number of jobs to run simultaneously. default = num of logical core on the host")
    byd__private__set_num_core_available(${BYD__OPTION__JOBS})

    variable_watch(BYD__OPTION__JOBS byd__private__update_option_jobs)

endfunction()

