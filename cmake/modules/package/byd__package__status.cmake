function(byd__package__set_added package)

    __byd__package__set_property(ADDED 1)

endfunction()

##--------------------------------------------------------------------------------------------------------------------##

function(byd__package__is_added package result)

    __byd__package__get_property(ADDED is_added)

    byd__func__return(is_added)

endfunction()

##--------------------------------------------------------------------------------------------------------------------##
##--------------------------------------------------------------------------------------------------------------------##
##--------------------------------------------------------------------------------------------------------------------##

function(byd__package__set_generated package)

    __byd__package__set_property(GENERATED 1)

    byd__func__add_to_property(BYD__PACKAGE__GENERATED_LIST ${package})

endfunction()

##--------------------------------------------------------------------------------------------------------------------##

function(byd__package__is_generated package result)

    __byd__package__get_property(GENERATED is_generated)

    byd__func__return(is_generated)

endfunction()

##--------------------------------------------------------------------------------------------------------------------##

function(byd__package__get_generated_list result)

    byd__func__get_property(BYD__PACKAGE__GENERATED_LIST generated_list)

    byd__func__return(generated_list)

endfunction()

