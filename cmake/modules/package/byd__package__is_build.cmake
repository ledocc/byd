function(byd__package__set_build package)

    __byd__package__get_property(IS_BUILD 1)

endfunction()

##--------------------------------------------------------------------------------------------------------------------##

function(byd__package__is_build package result)

    __byd__package__get_property(IS_BUILD is_build)
    if(NOT is_build)
        set(is_build 0)
    endif()

    set(${result} ${is_build} PARENT_SCOPE)

endfunction()

